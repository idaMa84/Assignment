@model List<Like>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Likes
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Like" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>

    </div>


<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            About
        </th>
        <th>
            Description            
        </th>
        <th>

        </th>
    </tr>
     </thead>
     <tbody>
         @foreach(var obj in Model.OrderByDescending(o=>o.Id)){
            <tr>
                    <td>
                        @obj.Id
                    </td>
                <td>
                    @obj.About
                </td>
                <td>
                    @obj.Description
                </td>
                <td>
                    <div class="w-20 btn-group" role="group">
                        <a asp-controller="Like" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                    </div>
                </td>
            </tr>
            }
     </tbody>

</table>

</div>

